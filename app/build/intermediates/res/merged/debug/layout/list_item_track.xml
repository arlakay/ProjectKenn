<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <ImageView
        android:id="@+id/artworkImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_vertical"
        android:paddingRight="16dp"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/artistNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="12sp"
            android:text="Artist Name" />

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/trackTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="14sp"
            android:text="Track Title" />
        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <!-- Plays -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="6dp"
                android:maxHeight="18dp"
                android:maxWidth="18dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_play_arrow_grey600_24dp" />

            <TextView
                android:id="@+id/playCountTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="83,302"
                android:textSize="10sp"/>

            <!-- Favorites -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="6dp"
                android:maxHeight="18dp"
                android:maxWidth="18dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_favorite_grey600_24dp" />

            <TextView
                android:id="@+id/favoriteCountTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="83,302"
                android:textSize="10sp"/>

            <!-- Likes -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="6dp"
                android:maxHeight="18dp"
                android:maxWidth="18dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_thumb_up_grey600_24dp" />

            <TextView
                android:id="@+id/likeCountTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="83,302"
                android:textSize="10sp"/>

            <!-- Comments -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="6dp"
                android:maxHeight="18dp"
                android:maxWidth="18dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_comment_grey600_24dp" />

            <TextView
                android:id="@+id/commentCountTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="83,302"
                android:textSize="10sp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>